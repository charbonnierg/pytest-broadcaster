---
import { Image } from "astro:assets"
import ShoelaceLayout from "../layouts/ShoelaceLayout.astro"
import SearchApp from "../components/pytest-discover/SearchApp.jsx"
import Logo from "../assets/pytest-discover-logo-transparent.svg"
import LogoDarkMode from "../assets/pytest-discover-logo-darkmode-transparent.svg"
---

<style>
  header,
  main {
    margin: auto;
    width: 1024px;
    max-width: calc(100% - 2rem);
    padding-left: 1rem;
    padding-right: 1rem;
  }
  main {
    padding-top: 1rem;
    padding-bottom: 1rem;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    text-align: left;
  }

  header {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
  }

  .logo {
    height: 4em;
    width: 4em;
    margin-top: 1em;
    margin-right: 1em;
  }
</style>

<ShoelaceLayout title="pytest-discover">
  <header>
    <Image class="logo only-light" src={Logo} alt="pytest-discover logo" />
    <Image class="logo only-dark" src={LogoDarkMode} alt="pytest-discover logo" />
    <h1>pytest-discover</h1>
  </header>
  <main>
    <SearchApp client:only="react" />
  </main>
</ShoelaceLayout>
