{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "test_suite.json",
    "title": "Test Suite",
    "description": "Pytest Test Suite",
    "type": "object",
    "required": [
      "node_id",
      "node_type",
      "name",
      "module",
      "path",
      "doc",
      "markers"
    ],
    "properties": {
      "node_id": {
        "type": "string",
        "description": "Node ID"
      },
      "node_type": {
        "const": "suite",
        "description": "Node Type"
      },
      "name": {
        "type": "string",
        "description": "Suite name"
      },
      "module": {
        "type": "string",
        "description": "Module name"
      },
      "path": {
        "type": "string",
        "description": "File path"
      },
      "doc": {
        "type": "string",
        "description": "Suite documentation"
      },
      "markers": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Test markers"
      }
    }
  }