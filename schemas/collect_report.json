{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/charbonnierg/pytest-discover/schemas/collect_report.json",
  "title": "Collect Report",
  "description": "Pytest Collect Report",
  "type": "object",
  "required": [
    "event",
    "items"
  ],
  "properties": {
    "event": {
      "const": "CollectReport",
      "description": "The event type"
    },
    "node_id": {
      "type": "string",
      "description": "The node id of the collector (if any)"
    },
    "items": {
      "type": "array",
      "description": "The collected items",
      "items": {
        "$ref": "test_item.json/#"
      }
    }
  }
}